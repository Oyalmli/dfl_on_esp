{
    "actionButtons": {
        "defaultColor": "#969dac",
        "reloadButton": null,
        "loadNpmCommands":false,
        "commands": [
            {   
                "cwd": "${workspaceFolder}",
                "name": "Make build folder $(file-directory-create)",
                "singleInstance": true,
                "command": "cmake -Bbuild-cmake -H. -GNinja",
                "tooltip": "creates build folder",
            },
            {   
                "cwd": "${workspaceFolder}/build-cmake",
                "name": "Build $(tools)",
                "singleInstance": true,
                "command": "cmake --build .",
                "tooltip": "builds project",
            },
            {
               "name": "Test $(checklist)",
               "cwd": "${workspaceFolder}/build-cmake/tests",
               "tooltip": "tests build in build folder",
               "singleInstance": true,
               "command": "./dvfw_test"
            },
            {
                "name": "Run main $(play)",
                "cwd": "${workspaceFolder}/build-cmake",
                "tooltip": "tests build in build folder",
                "singleInstance": true,
                "command": "time ./main"
             }
        ]
    },
